<% content_for :title, 'Sign in' %>

<% @current_link = {'Sign in' => new_user_session_path} %>
<% @dropdown_links = [] %>
<% @available_links = [{'Sign up' => new_user_registration_path}] %>
<%= render 'shared/navbar'%>



<!-- content-container - container-lg (responsive) -->
<div id="content-container" class="container-lg">

  <div class="row mt-2">
    <div class="col-12">
      <div class="bg-lavender px-4 py-2 rounded shadow">

        <h2 id="sign-in-header" class="border-smoky-black border-bottom mb-3">Log in</h2>
        
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.label :remember_me %>
              <%= f.check_box :remember_me, style: 'postion: relative; margin-left: 10px; margin-top: 6px;' %>
            </div>
          <% end %>
        
          <div class="form-group">
            <%= f.submit "Log in", class: 'btn btn-eton-blue' %>
          </div>
        <% end %>
        
        <%= render "devise/shared/links" %>
        
      </div>
    </div>
  </div>

</div><!-- content-container - container-lg (responsive) -->

