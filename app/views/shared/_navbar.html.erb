
<nav class="navbar navbar-expand-md navbar-dark bg-smoky-black shadow">
    <a href="/" class="navbar-brand">backbone</a>
    <button class="navbar-toggler" type=button data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div id="navbarSupportedContent" class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <%= link_to(@current_link.keys.first, @current_link[@current_link.keys.first], class: 'nav-link') %>
            </li>
            <% @available_links.each do |l| %>
                <li class="nav-item">
                    <% if l.keys.first == 'Sign out' %>
                        <% display = l.keys.first %>
                        <% method = :delete %>
                    <% elsif l.keys.first == 'Profile' %>
                        <% if Profile.exists?(user_id: current_user.id) %>
                            <% display = image_tag(Profile.find_by(user_id: current_user.id).profile_image.variant(resize: "30x30")) %>
                        <% else %>
                            <% display = 'Profile' %>
                        <% end %>
                        <% method = :get %>
                    <% else %>
                        <% display = l.keys.first %>
                        <% method = :get %>
                    <% end %>
                    <%= link_to(display, l[l.keys.first], id: l.keys.first.downcase.gsub(' ', '-'), :method => method, class: 'nav-link') %>
                </li>
            <% end %>
            <% if @dropdown_links != [] %>
                <li class="nav-item dropdown">
                    <a id="navbarDropdown" href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Sign up
                    </a>
                    <div class="dropdown-menu bg-smoky-black" aria-labelledby="navbarDropdown">
                        <% @dropdown_links.each do |l| %>
                            <%= link_to(l.keys.first, l[l.keys.first], class: 'dropdown-item text-light') %>
                        <% end %>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</nav>
